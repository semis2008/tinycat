<%@ page pageEncoding="utf-8"%><%@ taglib prefix="c" uri="http://java.sun.com/jstl/core_rt"%><%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%><%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%><!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]--><!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]--><!-- BEGIN HEAD --><%@ include file="../common/global.jsp"%><head><meta charset="utf-8" /><meta content="width=device-width, initial-scale=1.0" name="viewport" /><%@ include file="../common/head-content.jsp"%><link href="<%=staticPath%>/css/lucence.css" rel="stylesheet"	type="text/css" /></head><!-- END HEAD --><!-- BEGIN BODY --><body>	<%@ include file="../common/header.jsp"%>	<input type="hidden" value="<%=contextPath %>" id="contextPath">	<div id="content">		<div class="container">			<div class="page-header margin-top-large padding-middle">				<h1>					Kalor搜索索引管理 <small>lucence索引管理系统</small>				</h1>			</div>			<div class="row">				<div class="span2 bs-docs-sidebar">					<ul class="nav nav-list bs-docs-sidenav affix-top">						<li><a href="#overview"><i class="icon-chevron-right"></i>								概览</a></li>						<li><a href="#detailInfo"><i class="icon-chevron-right"></i>								索引库详情</a></li>						<li><a href="#testSearch"><i class="icon-chevron-right"></i>								lucence测试</a></li>						<li><a href="#dropdowns"><i class="icon-chevron-right"></i>								新建索引</a></li>						<li><a href="#scrollspy"><i class="icon-chevron-right"></i>								备注</a></li>					</ul>				</div>				<div class="span10 margin-top-middle">					<!-- Overview        ================================================== -->					<section id="overview">						<div class="page-header">							<h1>								综述 <small>索引的综合信息及说明</small>							</h1>						</div>						<h3>说明</h3>						<p>							系统对新建的所有日志，通过lucence进行索引和保存，主要用于全文检索。由于博主也是刚接触lucence，使用的是最新的4.8.1,网上资料不足，只能自己摸索，建立这个页面是想不断的验证自己的想法和学习的思路。						</p>						<h3>索引信息--Blog</h3>						<p>文档总数：${blogInfo.maxDocCount }							已删除文档总数：${blogInfo.delDocCount } 正常文档总数：${blogInfo.docCount }</p>						<h3>索引信息--reply</h3>						<p>文档总数：${blogInfo.maxDocCount }							已删除文档总数：${blogInfo.delDocCount } 正常文档总数：${blogInfo.docCount }</p>						<h3>索引信息--user</h3>						<p>文档总数：${blogInfo.maxDocCount }							已删除文档总数：${blogInfo.delDocCount } 正常文档总数：${blogInfo.docCount }</p>					</section>					<section id="detailInfo">						<div class="page-header">							<h1>								索引库详情<small>各个索引的详细信息</small>							</h1>						</div>						<h3>Blog</h3>						<table class="table table-striped">							<thead>								<tr>									<th>title</th>									<th>userName</th>									<th>pulishTime</th>									<th>reply/read</th>								</tr>							</thead>							<tbody>								<c:forEach items="${blogInfo.searchables }" var="blog">									<tr>										<td>${blog.title }</td>										<td>${blog.author_name }</td>										<td>${blog.publish_time }</td>										<td>${blog.reply_num }/${blog.read_num }</td>									</tr>								</c:forEach>							</tbody>						</table>					</section>					<section id="testSearch">						<div class="page-header">							<h1>								搜索测试<small>测试lucence检索</small>							</h1>						</div>						<h3>检索</h3>						<div class="input-prepend input-append">							<div class="btn-group">								<button tabindex="-1" id="searchKey" class="btn">检索条件</button>								<button tabindex="-1" data-toggle="dropdown"									class="btn dropdown-toggle">									<span class="caret"></span>								</button>								<ul class="dropdown-menu">									<li onclick="setSearchKey('title')"><a>title</a></li>									<li onclick="setSearchKey('author_name')"><a>author_name</a></li>									<li onclick="setSearchKey('tags')"><a>tags</a></li>								</ul>							</div>							<input class="span6" id="searchText" type="text">							<button type="submit" class="btn" onclick="search()">Search</button>						</div>						<table class="table table-striped">							<thead>								<tr>									<th>title</th>									<th>userName</th>									<th>pulishTime</th>									<th>tags</th>									<th>reply/read</th>								</tr>							</thead>							<tbody  id="searchResult">							</tbody>						</table>											</section>				</div>			</div>		</div>	</div>	<!-- 底部 -->	<%@ include file="../common/bottom.jsp"%>	<script src="<%=staticPath%>/js/goTop.js<%=version%>"		type="text/javascript"></script>	<script src="<%=staticPath%>/js/lucence.js<%=version%>"		type="text/javascript"></script>	<script type="text/javascript">		$(function() {	        // side bar	        setTimeout(function() {		        $('.bs-docs-sidenav').affix({			        offset: {			            top: 100,			            bottom: 100			        }		        })	        }, 100)        });	</script></body></html>